page{
  background-color: rgb(245, 245, 245);
}
.head{
  position: fixed;
  top: 0;
}
.search{
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx rgb(245, 245, 245) solid;
  background-color: rgb(255, 255, 255);
}
.searchFrame{
  width: 690rpx;
  height: 64rpx;
  margin: 0 auto;
  border-radius: 8rpx;
  padding-left: 30rpx;
  display: flex;
  background-color: rgb(245, 245, 245);
}
.searchFrame_input{
  width: 608rpx;
  height: 64rpx;
  font-size: 28rpx;
}
.searchFrame_images{
  width: 70rpx;
  height: 64rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-grow: 1;
}
.searchFrame_images > image{
  height: 30rpx;
  width: 30rpx;
}
.tab{
  width: 100%;
  height: 80rpx;
  display: flex;
  background-color: rgb(255, 255, 255);
  /* position: fixed;
  top: 0;
  z-index: 2;
  background-color: rgba(0, 0, 0, 0.2); */
}
.tab_text{
  line-height: 78rpx;
  text-align: center;
  width: 110rpx;
  height: 78rpx;

  color: rgb(31,31,31);
}
.onTab{
  border-bottom: 2rpx rgb(250,90,90) solid; 
}
.tabBar{
  display: flex;
}
.text_box{
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: rgb(128,128,128);
}
.on{
  color: rgb(250, 90, 90);
}
.padding{
  width: 100%;
  height: 164rpx;
}
.item{
  width: 710rpx;
  height: 244rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  background-color: rgb(255, 255, 255);
}
.item > image{
  width: 204rpx;
  height: 204rpx;
  padding: 0 20rpx;
}
.item_text{
  display: flex;
  width: 447rpx;
  height: 191rpx;
  overflow: hidden;
  flex-direction: column;
  justify-content: space-between;
}
.item_text_1{
  line-height: 40rpx;
  font-size: 30rpx;
}
.item_text_1_1{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.item_text_1_1_left{
  display: flex;
  line-height: 22rpx;
  font-size: 22rpx;
  color: rgb(128,128,128);
}
.padding10{
  padding-right: 10rpx;
}
.item_text_1_1_right{
  display: flex;
  line-height: 28rpx;
  font-size: 28rpx;
  color: rgb(250, 90, 90);
  align-items: flex-end;
}
.groupLogo{
  width: 28rpx;
  height: 28rpx;
  font-size: 22rpx;
  line-height: 28rpx;
  text-align: center;
  background-color: rgb(250, 90, 90);
  color: rgb(255, 255, 255);
  border-radius: 4rpx;
}
