/* 搜索框 */
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}
.topPadding{
  width: 100%;
  height: 88rpx;
}
.page{
  width: 100%;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
}
.search_bar{
  position:relative;
  padding:16rpx 20rpx;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  box-sizing:border-box;
  background-color: rgb(255, 255, 255);
  /* background-color:#efeff4;
  border-top:1rpx solid #d7d6dc;
  border-bottom:1rpx solid #d7d6dc */
}
.search-bar__form{
	position:relative;
	-webkit-box-flex:1;
	-webkit-flex:auto;
	flex:auto;
	border-radius:5px;
	background:#fff;
}
.weui-search-bar__label{
  position:absolute;
  top:0;
  right:0;
  bottom:0;
  left:0;
  z-index:2;
  border-radius:3px;
  text-align:center;
  color:#9b9b9b;
  background:rgb(241, 241, 241);
  line-height:28px
}
/* 导航栏 */
.categories {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center; 
  color: rgb(128, 128, 128);
  background-color: rgb(255, 255, 255);
  white-space: nowrap;
  display: flex;
} 
.categories .category {
  width: 160rpx;
  height: 88rpx;
  font-size: 32rpx;
  display: inline-block;
} 
.on{ 
  color: rgb(255, 90, 90); 
} 
