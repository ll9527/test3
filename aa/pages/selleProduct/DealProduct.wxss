.item{
  width: 710rpx;
  height: 244rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  background-color: rgb(255, 255, 255);
}
.item > image{
  width: 204rpx;
  height: 204rpx;
  padding: 0 20rpx;
}
.item_text{
  display: flex;
  width: 447rpx;
  height: 191rpx;
  overflow: hidden;
  flex-direction: column;
  justify-content: space-between;
}
.item_text_1{
  line-height: 40rpx;
  font-size: 30rpx;
}
.item_text_1_1{
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.item_text_1_1_left{
  display: flex;
  line-height: 22rpx;
  font-size: 22rpx;
  color: rgb(128,128,128);
}
.padding10{
  padding-right: 10rpx;
}
.item_text_1_1_right{
  display: flex;
  line-height: 28rpx;
  font-size: 28rpx;
  color: rgb(250, 90, 90);
  align-items: flex-end;
}
.groupLogo{
  width: 28rpx;
  height: 28rpx;
  font-size: 22rpx;
  line-height: 28rpx;
  text-align: center;
  background-color: rgb(250, 90, 90);
  color: rgb(255, 255, 255);
  border-radius: 4rpx;
}