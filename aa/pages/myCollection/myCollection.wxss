page{
  background-color: rgb(245, 245, 245);
}
.tabBar{
  display: flex;
  width: 100%;
  height: 80rpx;
  border-top: 1rpx rgb(245, 245, 245) solid;
  font-size: 32rpx;
  color: rgb(128,128,128);
  background-color: rgb(255, 255, 255);
  position: fixed;
  top: 0;
  z-index: 2;
}
.onTab{
  color: rgb(255,90,90);
}
.tab_padding{
  width: 100%;
  height: 100rpx;
}
.tabBar > view{
  line-height: 80rpx;
  text-align: center;
  flex-grow: 1;
}
.items{
  background-color: rgb(255, 255, 255);
  margin-bottom: 20rpx;
}
.items_title{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  padding: 0 20rpx;
  border-bottom: 2rpx rgb(240, 240, 240) solid;
}
.items_body{
  display: flex;
  align-items: center;
  padding: 20rpx;
}
.items_body_image{
  width: 204rpx;
  height: 204rpx;
  margin: 0 20rpx;
}
.items_body_right{
  width: 408rpx;
  height: 204rpx;
}
.items_body_right_title{
  height: 72rpx;
  line-height: 36rpx;
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.items_body_right_bottom{
  height: 112rpx;
  display: flex;
  align-items: flex-end;
}
.items_body_right_bottom_1{
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 20rpx;
  background-color: rgb(255,90,90);
  color: rgb(255, 255, 255);
  border-radius: 4rpx;
}
.items_body_right_bottom_2{
  /* width: 250rpx; */
  height: 28rpx;
  line-height: 28rpx;
  font-size: 26rpx;
  overflow: hidden;
  color: rgb(255,90,90);
}
.originalPrice{
  color: rgb(127,127,127);
  width: 250rpx;
}
.items_body_right_bottom_3{
  /* width: 100rpx; */
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 50rpx;
  line-height: 32rpx;
  font-size: 30rpx;
  color: rgb(127,127,127);
}
.items_body_right_bottom_3_text1{
  width:50rpx; 
  height: 60rpx;
  display: flex;
  align-items: flex-end;
}
.items_body_right_bottom_3_text2{
  width:50rpx; 
  height: 60rpx;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
}
.body_bottom{
  width: 750rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* padding: 0 20rpx; */
  /* padding-left: 20rpx; */
  height: 80rpx;
  background-color: rgb(255, 255, 255);
  position: fixed;
  bottom: 0;
  right: 0;

}
.body_bottom_1{
  display: flex;
  padding-left: 20rpx;
  justify-content: space-between;
  align-items: center;
}
.body_bottom_1_text1{
  line-height: 32rpx;
  font-size: 30rpx;
}
.body_bottom_1_text2{
  line-height: 32rpx;
  font-size: 30rpx;
  color: rgb(255,90,90);
}
.body_bottom_2{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.del{
  width: 160rpx;
  height: 80rpx;
  color: rgb(255, 255, 255);
  background-color: rgb(204,204,204);
  /* margin-left: 10rpx; */
  border-radius: 0;
}
.del::after {
  border: none;
}
.del > view{
  line-height: 80rpx;
}
.submit{
  width: 750rpx;
  height: 80rpx;
  color: rgb(255, 255, 255);
  background-color: rgb(255,90,90);
  /* margin-left: 10rpx; */
  border-radius: 0;
}
.submit > view{
  font-size: 28rpx;
  line-height: 80rpx;
}
.botton_padding{
  width: 750rpx;
  height: 80rpx;
}
