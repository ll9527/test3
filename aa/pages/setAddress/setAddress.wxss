.button{
  width: 100%;
  height: 80rpx;
  background-color: rgb(255, 255, 255);
  position: fixed;
  bottom: 0;
}
button::after {
  border: none;
}
.button_cancel{
  width: 375rpx;
  height: 80rpx;
  color: rgb(128, 128, 128);
  background-color: rgb(255, 255, 255);
  border-radius: 0;
}
.button_cancel > view{
  line-height: 80rpx;
}
.button_submit{
  color: rgb(255, 255, 255);
  background-color: rgb(255,90,90);
}