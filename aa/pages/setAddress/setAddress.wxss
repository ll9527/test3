page{
  background-color: rgb(245, 245, 245);
}
.box{
  width: 100%;
  height: 100rpx;
  display: flex;
  background-color: rgb(255, 255, 255);
  margin-top: 1rpx;
}
.box_margin{
  margin-top: 18rpx;
}
.text{
  width: 130rpx;
  padding-left: 30rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  /* text-align: center; */
  flex-shrink: 0;
}
.name_text{
  width: 130rpx;
  padding-left: 40rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  flex-shrink: 0;
}
.input{
  margin-left: 20rpx;
  flex-grow: 1;
  height: 100rpx;
  font-size: 28rpx;
}
.picker{
  flex-grow: 1;
}
.picker_text{
  margin-left: 20rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
