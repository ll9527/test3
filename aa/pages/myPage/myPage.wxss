.page{
  width: 100%;
  /* display: flex;
  flex-direction: column; */
  background-color: rgb(245, 245, 245);
}
.box1{
  width: 710rpx;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  background-color: rgb(255, 255, 255);
  margin: 0 20rpx;
  margin-top: 20rpx;
  border-radius: 8rpx;
}
.box1_top{
  width: 670rpx;
  height: 96rpx;
  margin: 20rpx;
  display: flex;
}
.box1_top_image{
  width: 96rpx;
  height: 96rpx;
}
.box1_top_mid{
  width: 430rpx;
  height: 74rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}
.box1_top_mid_title{
  height: 36rpx;
  line-height: 32rpx;
  align-content: center;
  font-size: 30rpx;
  color: rgb(31, 31, 31);
}
.box1_top_mid_title2{
  margin-top: 10rpx; 
  height: 36rpx;
  display: flex;
  /* text-align: 30rpx;
  align-content: center;
  font-size: 28rpx;
  color: rgb(31, 31, 31); */
}
.box1_top_mid_title2 > view{
  height: 30rpx;
  line-height: 30rpx;
  font-size: 22rpx;
  border-radius: 4rpx;
  padding:0 5rpx;
  color: rgb(255, 255, 255);
  background-color: rgb(83, 180, 251);
}
.box1_top_last{
  width:220rpx;
  height: 48rpx;
  display: flex;
  /* padding-left: 200rpx; */
  /* justify-content: space-around; */
}
.box1_top_icon{
  width: 48rpx;
  height: 48rpx;
  margin:0 20rpx;
}
.box1_bottom{
  width: 670rpx;
  height: 80rpx;
  margin: 10rpx 20rpx;
  display: flex;
}
.box1_bottom_1{
  width: 314rpx;
  height: 80rpx;
  display: flex;
}
.box1_bottom_1 > image{
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
}
.box1_bottom_1_title{
  height: 26rpx;
  line-height: 26rpx;
  font-size: 24rpx;
  padding-top: 10rpx;
  color: rgb(31, 31, 31);
}
.box1_bottom_1_num{
  height: 36rpx;
  line-height: 36rpx;
  font-size: 34rpx;
  padding-top: 6rpx;
}
.box1_bottom_2{
  height: 80rpx;
  margin-right: 30rpx;
  border-right: 2rpx rgb(204,204,204) solid;
}
.box2{
  width: 100%;
  height: 204rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0px -2px 4px 0px rgba(0, 0, 0, 0.1);
  background-color: rgb(255, 255, 255);
}
.box2_top{
  height: 32rpx;
  margin: 20rpx 24rpx;
  display: flex;
  justify-content: space-between;
}
.box2_top_title{
  height: 32rpx;
  line-height: 32rpx;
  font-size: 30rpx;
}
.box2_top_title2{
  height: 26rpx;
  padding-top: 4rpx;
  line-height: 26rpx;
  font-size: 24rpx;
  color: rgb(128,128,128);
}
.box2_bottom{
  margin-top: 16rpx;
  display: flex;
  justify-content:space-around;
}
.box2_bottom_icon{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.box2_bottom_icon > image{
  width: 38rpx;
  height: 38rpx;
}
.box2_bottom_icon > view{
  height: 24rpx;
  line-height: 24rpx;
  font-size: 22rpx;
  padding-top: 20rpx; 
  color: rgb(128, 128, 128);
}
.bonusPool{
  width: 670rpx;
  padding: 0 40rpx;
  padding-bottom: 20rpx;
  background-color: rgb(255, 255, 255);
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.bonusPool_1{
  color: rgb(128, 128, 128);
  font-size: 22rpx;
}
.box3{
  width: 100%;
  /* height: 320rpx; */
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  background-color: rgb(255, 255, 255);
}
.box3_item{
  width: 678rpx;
  height: 80rpx;
  padding-left: 26rpx; 
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
}
.cause{
  width: 678rpx;
  padding-left: 26rpx; 
  display: flex;
  overflow: hidden;
  font-size: 26rpx;
  line-height: 60rpx;
  color: rgb(255, 90, 90)
}
.box3_item > view{
  height: 32rpx;
  line-height: 32rpx;
  font-size: 26rpx;
}
.box3_item_border{
  border-top: 1rpx rgb(196,196,196) solid;
}
.box4{
  width: 750rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}
.box4_text{
  height: 24rpx;
  line-height: 24rpx;
  font-size: 22rpx;
}
button::after {
  border: none;
}
.button {
  background-color: #fff;
  width: 704rpx;
  border-radius:0;
  padding: 0;
  margin: 0;
  padding-left: 26rpx;
}
