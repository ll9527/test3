/**app.wxss**/
@import "style/weui.wxss";

page{
    background-color: rgb(255, 255, 255);
    font-size: 16px;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 40px;
}
.page__bd {
    padding-bottom: 40px;
}
.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft{
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888888;
    text-align: left;
    font-size: 14px;
}
/* 置顶键样式 */
.goTop{
  position: fixed;
  bottom: 50rpx;
  right: 30rpx;
}
.goTop > image{
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  background-color: rgba(0,0,0,.1);
}
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
.rootBox{
  /* height: 2000rpx; */
  background: rgba(255, 255, 255, 0);
  position: fixed;
  left: 0px;
  top: 0px;
  z-index: 999;
}